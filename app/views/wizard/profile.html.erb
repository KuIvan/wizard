<%= simple_form_for @user, url: wizard_path(:profile), method: :put do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :address %>
  <%= f.input :gender, as: :radio_buttons, collection: User.genders.keys.map { |key| [key, key.titleize] }, label_method: :second, value_method: :first, checked: @user.gender %>
  <%= f.input :language_id, collection: @languages %>
  <%= f.input :country_id, collection: @countries %>
  <%= f.button :submit %>
<% end %>
<div class="flex justify-between">
  <% if !current_step?(:profile) && !current_step?(:thank_you) %>
    <%= link_to 'Go Back', previous_wizard_path, class: "inline-flex items-center h-8 px-4 m-2 text-sm text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800" %>
    <%= link_to 'Skip Step', next_wizard_path, class: "inline-flex items-center h-8 px-4 m-2 text-sm text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800" %>
  <% end %>

  <% if user_signed_in? %>
    <%= link_to 'Logout', destroy_user_session_path, class: "inline-flex items-center h-8 px-4 m-2 text-sm text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800" %>
  <% end %>
</div>
